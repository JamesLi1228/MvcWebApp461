@model IEnumerable<MvcWebApp.Entities.AddressesPerContact>
@{
    ViewBag.Title = "Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contacts Summary</h2>

<table>
    <tr>
        <th>
            Number Of Contacts
        </th>
        <th>
            Number Of Computers
        </th>
    </tr>

    <tr>
        <td>
            @ViewBag.Summary.NumberOfContacts
        </td>
        <td>
            @ViewBag.Summary.TotalOfComputers
        </td>
      </tr>
</table>
<hr />
<table>
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Number Of Addresses
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @item.NumberOfAddresses
            </td>
        </tr>
    }
</table>